{
  "name": "safer-version-lens",
  "displayName": "Safer Version Lens",
  "description": "Shows safe package versions respecting pnpm's minimum release age (time quarantine) configuration",
  "version": "0.0.1",
  "publisher": "asmundwien",
  "repository": {
    "type": "git",
    "url": "https://github.com/asmundwien/safer-version-lens"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "safer-version-lens.showVersionInfo",
        "title": "Safer Version Lens: Show Version Info"
      },
      {
        "command": "safer-version-lens.refresh",
        "title": "Safer Version Lens: Refresh"
      },
      {
        "command": "safer-version-lens.showConfig",
        "title": "Safer Version Lens: Show Configuration"
      }
    ],
    "configuration": {
      "title": "Safer Version Lens",
      "properties": {
        "saferVersionLens.registry": {
          "type": "string",
          "default": "https://registry.npmjs.org",
          "description": "NPM registry URL to fetch package information from"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package:vsix": "pnpm run package && vsce package",
    "install:local": "pnpm run package:vsix && code --install-extension safer-version-lens-0.0.1.vsix",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "format": "prettier --write --ignore-path .prettierignore '**/*.{js,jsx,ts,tsx,md,mdx,scss,json}'",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "packageManager": "pnpm@10.25.0"
}
